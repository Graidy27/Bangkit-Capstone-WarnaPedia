<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RectangleLight">
        <item name="android:background">@color/teal_200</item>
        <item name="android:backgroundTint">@color/teal_200</item>
    </style>
    <style name="RectangleDark">
        <item name="android:background">@color/teal_700</item>
        <item name="android:backgroundTint">@color/teal_700</item>
    </style>
    <style name="CustomAlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>
    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/D8D8D8</item>
    </style>
    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/D8D8D8</item>
    </style>
    <style name="SpinnerTextStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:textSize">20sp</item> <!-- Set the desired text size here -->
        <!-- Add any other style attributes as needed -->
    </style>
</resources>