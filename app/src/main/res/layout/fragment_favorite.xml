<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.favorite.FavoriteFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/l_example_design_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/example_design_container_height"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/l_example_design"
            android:layout_width="match_parent"
            android:layout_height="@dimen/example_design_height"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/teal_700"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/comp1_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="@string/the"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/comp1_2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/comp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/title"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/comp1_5"
                app:layout_constraintTop_toTopOf="@+id/comp1_5" />

            <View
                android:id="@+id/comp1_1"
                style="@style/RectangleLight"
                android:layout_width="100dp"
                android:layout_height="7dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/rounded_rectangle_5dp"
                app:layout_constraintEnd_toEndOf="@+id/comp1_2"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/comp1_2"
                style="@style/RectangleLight"
                android:layout_width="140dp"
                android:layout_height="7dp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toStartOf="@+id/comp4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/comp1_1"
                android:background="@drawable/rounded_rectangle_5dp"/>

            <View
                android:id="@+id/comp1_3"
                style="@style/RectangleLight"
                android:layout_width="140dp"
                android:layout_height="7dp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toStartOf="@+id/comp4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/comp1_2"
                android:background="@drawable/rounded_rectangle_5dp"/>

            <View
                android:id="@+id/comp1_4"
                style="@style/RectangleLight"
                android:layout_width="140dp"
                android:layout_height="7dp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toStartOf="@+id/comp4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/comp1_3"
                android:background="@drawable/rounded_rectangle_5dp"/>

            <View
                android:id="@+id/comp4"
                style="@style/RectangleLight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/left_rounded_rectangle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.5" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <View
                android:id="@+id/comp1_6"
                style="@style/RectangleDark"
                android:layout_width="140dp"
                android:layout_height="18dp"
                android:layout_marginTop="60dp"
                app:layout_constraintEnd_toEndOf="@+id/comp4"
                app:layout_constraintStart_toStartOf="@+id/comp4"
                app:layout_constraintTop_toTopOf="@+id/comp4" />

            <View
                android:id="@+id/comp1_7"
                style="@style/RectangleDark"
                android:layout_width="140dp"
                android:layout_height="18dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@+id/comp4"
                app:layout_constraintStart_toStartOf="@+id/comp4"
                app:layout_constraintTop_toBottomOf="@+id/comp1_6" />

            <View
                android:id="@+id/comp3"
                style="@style/RectangleDark"
                android:layout_width="120dp"
                android:layout_height="18dp"
                android:layout_marginTop="25dp"
                app:layout_constraintEnd_toEndOf="@+id/comp4"
                app:layout_constraintStart_toStartOf="@+id/comp4"
                app:layout_constraintTop_toBottomOf="@+id/comp1_7"
                android:background="@drawable/rounded_rectangle_5dp"/>

            <TextView
                android:id="@+id/comp1_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/comp3"
                app:layout_constraintEnd_toEndOf="@+id/comp3"
                app:layout_constraintStart_toStartOf="@+id/comp3"
                app:layout_constraintTop_toTopOf="@+id/comp3" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/example_design_nav"
            android:background="@drawable/layout_border_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:text="@string/example_design"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/b_right_example_layout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_nav"
                android:contentDescription="@string/example_nav_button_left"
                android:src="@drawable/baseline_keyboard_arrow_left_24"
                android:stateListAnimator="@animator/fade_state_list_animator"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/b_left_example_layout"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/b_left_example_layout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_nav"
                android:contentDescription="@string/example_nav_button_right"
                android:src="@drawable/baseline_keyboard_arrow_right_24"
                android:stateListAnimator="@animator/fade_state_list_animator"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_color_palette"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_row_color_palette"
        android:layout_marginTop="@dimen/example_design_container_height"
        android:layout_marginBottom="?attr/actionBarSize"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/l_example_design_container"/>
</androidx.constraintlayout.widget.ConstraintLayout>