<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/l_example_design"
    android:layout_width="match_parent"
    android:layout_height="@dimen/example_design_height"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@color/teal_700"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <View
        android:id="@+id/comp1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/comp2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dummy_name"
        android:textStyle="bold"
        android:textColor="@color/D8D8D8"
        android:layout_marginTop="5dp"
        android:textSize="10sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/comp4"
        app:layout_constraintStart_toStartOf="@+id/comp4"
        app:layout_constraintTop_toBottomOf="@+id/comp4" />

    <TextView
        android:id="@+id/comp2_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/dummy_job"
        android:textColor="@color/D8D8D8"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="@+id/comp4"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="@+id/comp4"
        app:layout_constraintTop_toBottomOf="@+id/comp2_1" />

    <TextView
        android:id="@+id/comp3_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="@string/my_story"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/comp1" />

    <TextView
        android:id="@+id/comp3_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/medium_text"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/comp3_1"
        app:layout_constraintTop_toBottomOf="@+id/comp3_1"
        app:layout_constraintWidth_percent="0.4"/>

    <TextView
        android:id="@+id/comp3_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="@string/personal_information"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/comp3_1" />

    <TextView
        android:id="@+id/comp3_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/dummy_age"
        android:textColor="@color/black"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/comp3_3"
        app:layout_constraintTop_toBottomOf="@+id/comp3_3"
        app:layout_constraintWidth_percent="0.4" />

    <View
        android:id="@+id/comp3_5"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toEndOf="@+id/comp3_4"
        app:layout_constraintStart_toStartOf="@+id/comp3_4"
        app:layout_constraintTop_toBottomOf="@+id/comp3_4"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/comp3_6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/dummy_phone_number"
        android:textColor="@color/black"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/comp3_5"
        app:layout_constraintTop_toBottomOf="@+id/comp3_5"
        app:layout_constraintWidth_percent="0.4" />

    <View
        android:id="@+id/comp3_7"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toEndOf="@+id/comp3_6"
        app:layout_constraintStart_toStartOf="@+id/comp3_6"
        app:layout_constraintTop_toBottomOf="@+id/comp3_6"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/comp3_8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/dummy_email"
        android:textColor="@color/black"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/comp3_7"
        app:layout_constraintTop_toBottomOf="@+id/comp3_7"
        app:layout_constraintWidth_percent="0.4" />

    <View
        android:id="@+id/comp3_9"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toEndOf="@+id/comp3_8"
        app:layout_constraintStart_toStartOf="@+id/comp3_8"
        app:layout_constraintTop_toBottomOf="@+id/comp3_8"
        app:layout_constraintWidth_percent="0.4" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/comp4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/white"
        android:src="@drawable/dummy_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/dummy_user" />

</androidx.constraintlayout.widget.ConstraintLayout>