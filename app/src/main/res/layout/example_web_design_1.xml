<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/l_example_design"
    android:layout_width="match_parent"
    android:layout_height="@dimen/example_design_height"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@color/teal_700"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/comp1_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="@string/the"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/comp1_2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/comp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/title"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/comp1_5"
        app:layout_constraintTop_toTopOf="@+id/comp1_5" />

    <View
        android:id="@+id/comp1_1"
        style="@style/RectangleLight"
        android:layout_width="100dp"
        android:layout_height="7dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/rounded_rectangle_5dp"
        app:layout_constraintEnd_toEndOf="@+id/comp1_2"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/comp1_2"
        style="@style/RectangleLight"
        android:layout_width="140dp"
        android:layout_height="7dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toStartOf="@+id/comp4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comp1_1"
        android:background="@drawable/rounded_rectangle_5dp"/>

    <View
        android:id="@+id/comp1_3"
        style="@style/RectangleLight"
        android:layout_width="140dp"
        android:layout_height="7dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toStartOf="@+id/comp4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comp1_2"
        android:background="@drawable/rounded_rectangle_5dp"/>

    <View
        android:id="@+id/comp1_4"
        style="@style/RectangleLight"
        android:layout_width="140dp"
        android:layout_height="7dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toStartOf="@+id/comp4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comp1_3"
        android:background="@drawable/rounded_rectangle_5dp"/>

    <View
        android:id="@+id/comp4"
        style="@style/RectangleLight"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/left_rounded_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <View
        android:id="@+id/comp1_6"
        android:layout_width="140dp"
        android:layout_height="18dp"
        android:layout_marginTop="60dp"
        android:background="@color/teal_700"
        app:layout_constraintEnd_toEndOf="@+id/comp4"
        app:layout_constraintStart_toStartOf="@+id/comp4"
        app:layout_constraintTop_toTopOf="@+id/comp4" />

    <View
        android:id="@+id/comp1_7"
        android:layout_width="140dp"
        android:layout_height="18dp"
        android:layout_marginTop="10dp"
        android:background="@color/teal_700"
        app:layout_constraintEnd_toEndOf="@+id/comp4"
        app:layout_constraintStart_toStartOf="@+id/comp4"
        app:layout_constraintTop_toBottomOf="@+id/comp1_6" />

    <View
        android:id="@+id/comp3"
        style="@style/RectangleDark"
        android:layout_width="120dp"
        android:layout_height="18dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="@+id/comp4"
        app:layout_constraintStart_toStartOf="@+id/comp4"
        app:layout_constraintTop_toBottomOf="@+id/comp1_7"
        android:background="@drawable/rounded_rectangle_5dp"/>

    <TextView
        android:id="@+id/comp1_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/comp3"
        app:layout_constraintEnd_toEndOf="@+id/comp3"
        app:layout_constraintStart_toStartOf="@+id/comp3"
        app:layout_constraintTop_toTopOf="@+id/comp3" />

</androidx.constraintlayout.widget.ConstraintLayout>