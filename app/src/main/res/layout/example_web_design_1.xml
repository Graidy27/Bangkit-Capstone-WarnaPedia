<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/l_example_design"
    android:layout_width="match_parent"
    android:layout_height="@dimen/example_design_container_height"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@color/teal_700"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/comp1_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="@string/the"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/comp1_2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/comp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/title"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/comp1_5"
        app:layout_constraintTop_toTopOf="@+id/comp1_5" />

    <View
        android:id="@+id/comp1_1"
        style="@style/RectangleLight"
        android:layout_width="100dp"
        android:layout_height="7dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/rounded_rectangle_5dp"
        app:layout_constraintEnd_toEndOf="@+id/comp1_2"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/comp1_2"
        style="@style/RectangleLight"
        android:layout_width="140dp"
        android:layout_height="7dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toStartOf="@+id/comp4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comp1_1"
        android:background="@drawable/rounded_rectangle_5dp"/>

    <View
        android:id="@+id/comp1_3"
        style="@style/RectangleLight"
        android:layout_width="140dp"
        android:layout_height="7dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toStartOf="@+id/comp4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comp1_2"
        android:background="@drawable/rounded_rectangle_5dp"/>

    <View
        android:id="@+id/comp1_4"
        style="@style/RectangleLight"
        android:layout_width="140dp"
        android:layout_height="7dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toStartOf="@+id/comp4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comp1_3"
        android:background="@drawable/rounded_rectangle_5dp"/>

    <View
        android:id="@+id/comp4"
        style="@style/RectangleLight"
        android:layout_width="0dp"
        android:layout_height="@dimen/example_design_height"
        android:background="@drawable/left_rounded_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <View
        android:id="@+id/comp1_6"
        android:layout_width="140dp"
        android:layout_height="18dp"
        android:layout_marginTop="60dp"
        android:background="@color/teal_700"
        app:layout_constraintEnd_toEndOf="@+id/comp4"
        app:layout_constraintStart_toStartOf="@+id/comp4"
        app:layout_constraintTop_toTopOf="@+id/comp4" />

    <View
        android:id="@+id/comp1_7"
        android:layout_width="140dp"
        android:layout_height="18dp"
        android:layout_marginTop="10dp"
        android:background="@color/teal_700"
        app:layout_constraintEnd_toEndOf="@+id/comp4"
        app:layout_constraintStart_toStartOf="@+id/comp4"
        app:layout_constraintTop_toBottomOf="@+id/comp1_6" />

    <View
        android:id="@+id/comp3"
        style="@style/RectangleDark"
        android:layout_width="120dp"
        android:layout_height="18dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="@+id/comp4"
        app:layout_constraintStart_toStartOf="@+id/comp4"
        app:layout_constraintTop_toBottomOf="@+id/comp1_7"
        android:background="@drawable/rounded_rectangle_5dp"/>

    <TextView
        android:id="@+id/comp1_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/comp3"
        app:layout_constraintEnd_toEndOf="@+id/comp3"
        app:layout_constraintStart_toStartOf="@+id/comp3"
        app:layout_constraintTop_toTopOf="@+id/comp3" />

    <View
        android:id="@+id/color_1"
        android:layout_width="0dp"
        android:layout_height="@dimen/example_design_nav"
        android:background="@color/teal_200"
        android:text="@string/login"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.25"
        android:visibility="gone"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_color_1"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_gravity="bottom"
        android:alpha="0.7"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintTop_toTopOf="@+id/color_1"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_color_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/example_color"
            android:textColor="@color/black"
            android:textSize="10sp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:id="@+id/color_2"
        android:layout_width="0dp"
        android:layout_height="@dimen/example_design_nav"
        android:background="@color/F5F5F5"
        android:text="@string/login"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/color_1"
        app:layout_constraintWidth_percent="0.25"
        android:visibility="gone"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_color_2"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_gravity="bottom"
        android:alpha="0.7"
        android:background="@color/F5F5F5"
        app:layout_constraintStart_toEndOf="@id/ll_color_1"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintTop_toTopOf="@+id/color_2"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_color_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/example_color"
            android:textColor="@color/black"
            android:textSize="10sp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:id="@+id/color_3"
        android:layout_width="0dp"
        android:layout_height="@dimen/example_design_nav"
        android:background="@color/D8D8D8"
        android:text="@string/login"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintWidth_percent="0.25"
        android:visibility="gone"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_color_3"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_gravity="bottom"
        android:alpha="0.7"
        android:background="@color/F5F5F5"
        app:layout_constraintStart_toEndOf="@id/ll_color_2"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintTop_toTopOf="@+id/color_3"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_color_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/example_color"
            android:textColor="@color/black"
            android:textSize="10sp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:id="@+id/color_4"
        android:layout_width="0dp"
        android:layout_height="@dimen/example_design_nav"
        android:background="@color/F1C743"
        android:text="@string/login"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/color_3"
        app:layout_constraintWidth_percent="0.25"
        android:visibility="gone"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_color_4"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_gravity="bottom"
        android:alpha="0.7"
        android:background="@color/F5F5F5"
        app:layout_constraintStart_toEndOf="@id/ll_color_3"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintTop_toTopOf="@+id/color_4"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_color_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/example_color"
            android:textColor="@color/black"
            android:textSize="10sp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>