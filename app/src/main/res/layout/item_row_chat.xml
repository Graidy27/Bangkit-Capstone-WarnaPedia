<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/D8D8D8"
        android:paddingTop="5dp"
        android:paddingBottom="15dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/user_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/baseline_remove_red_eye_24"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:justificationMode="inter_word"
            android:text="@string/long_text"
            android:textColor="@color/black"
            android:textSize="14sp"
            card_view:layout_constraintStart_toEndOf="@+id/user_icon"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintWidth_percent="0.85" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/go_to_design"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            card_view:layout_constraintEnd_toEndOf="@+id/tv_message"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_message"
            android:background="@color/black_alpha_80"
            android:text="@string/go_to_design"
            android:textColor="@color/white"
            android:paddingHorizontal="20dp"
            android:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>